{
  "manifest_version": 3,
  "name": "Current URL Copier",
  "version": "1.0",
  "description": "Copy current URL with Ctrl+Command+C or Alt+Shift+C",
  "permissions": [
    "activeTab",
    "commands",
    "clipboardWrite",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "copy-url": {
      "suggested_key": {
        "mac": "MacCtrl+Command+C",
        "windows": "Alt+Shift+C",
        "linux": "Alt+Shift+C",
        "default": "Alt+Shift+C"
      },
      "description": "Copy current URL"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ]
}